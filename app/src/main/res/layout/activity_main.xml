<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
    android:background="#202020">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lower Bound"
        android:textAlignment="center"
        android:id="@+id/lower_bound"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="200dp"
        android:textColorHint="#FFFF"
        android:textColor="#FFFF"
        android:background="@drawable/roundercorner"
        android:padding="5dp"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Upper Bound"
        android:textAlignment="center"
        android:layout_below="@id/lower_bound"
        android:id="@+id/upper_bound"
        android:background="@drawable/roundercorner"
        android:padding="5dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF"
        android:inputType="number"/>

    <ImageButton
        android:id="@+id/guess_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upper_bound"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_arrow"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>